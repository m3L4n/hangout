<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permission for phone call -->
    <uses-permission android:name="android.permission.CHANGE_STATUS_BAR_COLOR" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ft_hangout"
        tools:targetApi="31">
        <activity
            android:name=".controller.MessageActivity"
            android:parentActivityName=".controller.MainActivity"/>
        <activity
            android:name=".controller.Updateactivity"
            android:parentActivityName=".controller.MainActivity"/>
        <activity
            android:name=".controller.MainActivity2"
            android:exported="false"
            android:label="@string/description_add"
            android:parentActivityName=".controller.MainActivity" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
